@startuml
' Use Case Diagram: Giảng Viên (block 5 trên 4 dưới)
skinparam backgroundColor #FFFFFF
skinparam usecase {
  BackgroundColor #E3F2FD
  BorderColor #1976D2
  FontColor #0D47A1
  FontSize 15
  BorderThickness 1.5
}
skinparam actor {
  BackgroundColor #FFFDE7
  BorderColor #FBC02D
  FontColor #F57C00
  FontSize 18
  BorderThickness 2
}
skinparam Arrow {
  Color #388E3C
  Thickness 1.5
}

actor GiangVien as "Giảng Viên"

rectangle "Chức năng Giảng Viên" as GVBG #E3F2FD {
  ' Hàng trên
  usecase UC_DangNhap as "Đăng nhập"
  usecase UC_QuenMatKhau as "Quên mật khẩu"
  usecase UC_XemSuaThongTin as "Xem/Sửa thông tin cá nhân"
  usecase UC_XemLichGiangDay as "Xem lịch giảng dạy"
  usecase UC_QuanLyLopHP as "Quản lý lớp học phần"

  ' Hàng dưới

  usecase UC_XemSVLopHP as "Xem sinh viên trong lớp học phần"
  usecase UC_XemTongQuanLop as "Xem tổng quan lớp"
  usecase UC_NhapDiem as "Nhập điểm cho sinh viên"
  usecase UC_BaoCao as "Báo cáo"

  ' Mối quan hệ include
  UC_NhapDiem ..> UC_XemSVLopHP : <<include>>

  ' Sắp xếp vị trí 5 trên 4 dưới
  UC_DangNhap -[hidden]-> UC_QuenMatKhau
  UC_QuenMatKhau -[hidden]-> UC_XemSuaThongTin
  UC_XemSuaThongTin -[hidden]-> UC_XemLichGiangDay
  UC_XemLichGiangDay -[hidden]-> UC_QuanLyLopHP
  UC_QuanLyLopHP -[hidden]-> UC_XemSVLopHP
  UC_XemSVLopHP -[hidden]-> UC_XemTongQuanLop
  UC_XemTongQuanLop -[hidden]-> UC_NhapDiem
  UC_NhapDiem -[hidden]-> UC_BaoCao
  ' Tạo khoảng cách giữa 2 hàng
  UC_QuanLyLopHP -[hidden]-> UC_XemSVLopHP
}

GiangVien --> UC_DangNhap
GiangVien --> UC_QuenMatKhau
GiangVien --> UC_XemSuaThongTin
GiangVien --> UC_XemLichGiangDay
GiangVien --> UC_QuanLyLopHP
GiangVien --> UC_XemSVLopHP
GiangVien --> UC_XemTongQuanLop
GiangVien --> UC_NhapDiem
GiangVien --> UC_BaoCao

@enduml
